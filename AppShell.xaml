<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PizzaAppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PizzaAppMaui"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title="AllIngredients"
        Route="IngredientsListPage" 
        ContentTemplate="{DataTemplate local:IngredientsListPage}" />
    <ShellContent 
        Title="AllPizzas"
        Route="PizzasListPage" 
        ContentTemplate="{DataTemplate local:PizzasListPage}" />


</Shell>
