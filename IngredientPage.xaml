<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaAppMaui.IngredientPage"
             Title="Add New Ingredient">

    <ContentPage.Content>
        <StackLayout Margin="20">
            <Editor x:Name="ingredientNameEditor" Placeholder="Enter ingredient name" Margin="20" HeightRequest="50" />
            <Entry x:Name="ingredientPriceEntry" Placeholder="Enter ingredient price" Keyboard="Numeric" Margin="20" />
            <Entry x:Name="ingredientStockEntry" Placeholder="Enter ingredient stock" Keyboard="Numeric" Margin="20" />
            <Button Text="Save Ingredient" Clicked="OnSaveButtonClicked" Margin="20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
